# Local development environment variables
# Copy this to .env.local and update with your actual values

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/task_manager

# OpenAI API key (optional - AI tutor features will gracefully degrade without it)
# OPENAI_API_KEY=sk-...

# Session secret for express-session encryption
SESSION_SECRET=your-secret-key-change-this-in-production

# Server port
PORT=5000

# Replit OIDC configuration (optional for local dev)
# ISSUER_URL=https://replit.com/oidc
# REPL_ID=your-repl-id
